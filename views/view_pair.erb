<div class="box text-center">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 pair" style="<%= 'display: none' unless @show_pair && current_user.paired? %>">
      <div class="pair-error"></div>
      <div class="pair-name">
        <% if current_user.paired? %>
          <div><%= current_user.santee.email.name_from_email %></div>
          <div><%= current_user.santee.email %></div>
        <% end %>
        <hr class="divider">
        <% if exercise_schedule.show_santa? && current_user.santa %>
          <div class="santa-div">
            <div class="my-santa"><span>My Santa: </span><%= current_user.santa.email.name_from_email %></div>
            <div class="my-santa"><%= current_user.santa.email %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="custom_button_stuff" style="z-index: 8;">
    <% if current_user.unpaired? %>
    <a class="btn btn-transparent cust_btn" data-userinformation="<%= current_user.google_auth_id %>" href='/get_pair' id="get_pair_btn">
      Get Pair
    </a>
    <% else %>
    <% unless @show_pair %>
    <a class="btn btn-transparent cust_btn" href='/view_pair' id="view_pair_btn">
      View Pair
    </a>
    <% end %>
    <% end %>
  </div>
</div>
