<div class="page-content">
  <div class="row">
    <div class="col-md-12">
      <!-- BEGIN EXAMPLE TABLE PORTLET-->
      <div class="portlet box light-grey">
        <div class="portlet-title">
          <div class="caption">
            <i class="icon-globe"></i>ANDELA
          </div>
        </div>
        <div class="portlet-body">
          <table class="table table-striped table-bordered table-hover" id="sample_2">
            <thead>
              <tr>
                <th>User</th>
                <th>Pair</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |u|%>
              <tr class="odd gradeX">
                <td><%= u.email.name_from_email %></td>
                <td><%= u.pair.name_from_email %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
